<?xml version="1.0"?>
<configuration>
    <property>
        <name>yarn.nodemanager.aux-services</name>
        <value>mapreduce_shuffle</value>
    </property>
    <property>
        <name>yarn.nodemanager.aux-services.mapreduce_shuffle.class</name>
        <value>org.apache.hadoop.mapred.ShuffleHandler</value>
    </property>
    <property>
        <name>yarn.resourcemanager.hostname</name>
        <value>spark-master</value>
    </property>
    <property>
        <name>yarn.resourcemanager.webapp.address</name>
        <value>spark-master:8088</value>
    </property>

    <property>
        <name>yarn.application.classpath</name>
        <value>
            /usr/local/hadoop/hadoop-3.1.2/etc/hadoop,
            /usr/local/hadoop/hadoop-3.1.2/share/hadoop/common/*,
            /usr/local/hadoop/hadoop-3.1.2/share/hadoop/common/lib/*,
            /usr/local/hadoop/hadoop-3.1.2/share/hadoop/hdfs/*,
            /usr/local/hadoop/hadoop-3.1.2/share/hadoop/hdfs/lib/*,
            /usr/local/hadoop/hadoop-3.1.2/share/hadoop/mapreduce/*,
            /usr/local/hadoop/hadoop-3.1.2/share/hadoop/mapreduce/lib/*,
            /usr/local/hadoop/hadoop-3.1.2/share/hadoop/yarn/*,
            /usr/local/hadoop/hadoop-3.1.2/share/hadoop/yarn/lib/*
        </value>
    </property>
</configuration>
